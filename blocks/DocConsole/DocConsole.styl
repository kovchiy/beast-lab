.DocConsole

    color-console = #FFF
    color-text = #000
    color-hint = #999
    color-em = #1976D2
    color-warn = #E53935
    color-code = #1976D2
    color-focus = #F5F3E4
    nav-width = 170px
    gap = 10px
    mono-line-height = 16px

    font(family = normal mono)
        if family is normal
            font-family '.SFNSDisplay-Regular', HelveticaNeue, arial, sans-serif
            font-size 13px
            line-height 20px
        else if family is mono
            font-family monaco, monospace
            font-size 12px
            line-height 1mono-line-height

    /**
     * Style
     */
    background color-console
    color color-text
    font normal
    position relative
    width 100%
    height 100%

    &__doc
    &__table
        font normal
        color color-text

    &__doc
        position relative
        max-height 100%
        box-sizing border-box
        overflow auto
        margin 0 auto
        padding 20px 15px
        margin-right nav-width
        select text
        a
            color inherit
            color color-em
            text-decoration none
            &:hover
                text-decoration underline

    &__title
        font-weight bold
        font-size 20px
        line-height 1em
        color color-text
        .DocConsole__link
            font-weight normal
        .DocConsole__link + .DocConsole__link
            margin-left .7ex

    &__subtitle
        font-style italic
        margin-top 4px
        line-height 1em

    &__actions
        position absolute
        right gap * 2
        top gap

    a&__action
        font-size text-size
        display inline-block
        line-height 40px
        color color-hint
        cursor pointer
        text-decoration none
        & + &
            margin-left gap
        &:hover
            text-decoration underline
        &_state_active
            color #000

    &__text
        margin-top gap
        &_warn
            color color-warn
        .DocConsole__link + .DocConsole__link
            margin-left .7ex

    &__table
        position relative
        z-index 1
        margin-top gap
        margin-left gap * 2
        .docconsole__row:hover .docconsole__cell
            &:before
                background color-focus
            &_hint
                color color-focus * .5

    &__table_extendedOnly
        display none

    &_showExtended &__table_extendedOnly
        display table

    &__quote
        display inline-block
        &_default
            font-weight bold
        &_elem
            font-weight bold
        &_hint
            color color-hint

    &__tableTitle
        font-weight bold

    &__row_extended
        display none

    &_showExtended &__row_extended
        display table-row

    &__cell
        position relative
        &:before
            content ''
            display block
            position absolute
            z-index -1
            top 0
            bottom 0
            left -5px
            right -5px
            border-radius 3px

        &:not(:first-child)
            padding-left gap
        &_em
            font-style italic
        &_hint
            color color-hint
        &_pre
            white-space pre-wrap

    &__nav
        font normal
        line-height 26px
        background rgba(0,0,0,.05)
        position absolute
        top 0
        bottom 0
        right 0
        width nav-width
        padding 10px 0
        box-sizing border-box
        overflow auto
        white-space nowrap
        overflow-x hidden
        overflow-y visible
        text-overflow ellipsis

    &__navGroup
        overflow hidden
        transition height 200ms
        & + &
            margin-top gap

    &__navDivider
        height 1px
        background rgba(0,0,0,.1)
        margin gap 0

    &__navGroupTitle
    &__navItem
        cursor pointer
        padding 0 gap
        display block
        &:hover
            background rgba(0,0,0,.07)

    &__navGroupTitle
        text-transform uppercase
        letter-spacing .05em
        padding-left 2 * gap
        font-weight bold
        position relative
        &:before
            content ''
            position absolute
            left 10px
            top 0
            bottom 0
            width 8px
            background left center no-repeat @css{url(i/triangle.svg)}
            transition transform 200ms
            transform rotate(0deg) translate(0px,0px)
        &_state_active:before
            transform rotate(90deg) translate(2px,2px)

    &__navItem
        padding-left 2 * gap

    &__navItem_state_active
        background rgba(0,0,0,.07)

    &__divider
        margin gap * 2 0
        background rgba(0,0,0,.1)
        height 1px
        display block

    &__example
        margin 0 gap * 2
        margin-top gap * 2
        &:before
            content ''
            background rgba(0,0,0,.1)
            height 1px
            display block
            margin 0 (- gap * 2)

    &__exampleTitle
        margin-top gap * 1.5
        margin-left - (gap * 2)

    &__code
        margin-top gap * 2
        .docconsole__exampletitle + &
            margin-top gap
        font mono
        white-space pre-wrap
        cursor pointer
        color color-code
        position relative
        overflow hidden
        transition height 250ms
        & + &
            margin-top gap
        &_state
            &_shorten
                &:after
                    content ''
                    position absolute
                    top 50%
                    bottom 0
                    left 0
                    right 0
                    background linear-gradient(to top, #FFF, rgba(255,255,255,0))

    &__exampleCanvas
        position relative
        width 320px
        height 0
        transition height 200ms

    &__exampleTabs
        position relative
        z-index 2
        font mono
        margin-left - gap * .5

    &__exampleTab
        cursor pointer
        display inline-block
        padding gap gap * .5
        color color-code
        &_state
            &_release
                color mix(color-code, #FFF, 35%)
                &:hover
                    color color-code

    a
        position relative
        &:after
            content ''
            position absolute
            top -.5ex
            bottom -.5ex
            left 0
            right 0
