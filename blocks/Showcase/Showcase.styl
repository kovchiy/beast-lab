.Showcase
    position relative

    &_ColorWiz &__item
        transition color 300ms

    &__item
        vertical-align top
        display inline-block
        white-space normal
        position relative
        color inherit
        &:hover
            cursor pointer

    &__text
        ellipsis wrap
        opacity alpha-text

    &__title
        ellipsis wrap
        max-height 4em
        margin-top .5ex
        overflow hidden

    &__price
        font-weight bold

    &__label
        font-weight bold
        padding 5px 0
        text-transform uppercase
        font-size 10px
        line-height 1em
        letter-spacing 1px
        position absolute
        color #FFF
        background color-action
        background rgba(0,0,0,.7)
        top 0
        left -5px
        right -5px
        z-index 2

        &:before
        &:after
            content ''
            position absolute
            width 5px
            height 5px
            bottom -5px
            background center center no-repeat

        &:before
            left 0
            background-image @css{url(i/corner-left.svg)}

        &:after
            right 0
            background-image @css{url(i/corner-right.svg)}

    &__rating
        margin-top 1ex
