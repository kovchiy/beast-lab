.Select

    /**
     * Mixin
     */
    define-theme(theme, text, background)
        &_theme_{theme} &__arrows
            background-color text

    define-shape(platform, size)
        &__arrows
            width round(size * 0.86)

            if platform is touch
                mask center center no-repeat @css{url(i/arrows-touch.svg)}
            if platform is desktop
                mask center center no-repeat @css{url(i/arrows-desktop.svg)}

    /**
     * Style
     */
    for theme in control-theme
        define-theme(
            theme,
            control-theme[theme].text,
            control-theme[theme].background
        )

    @media screen-touch
        define-shape(touch, control-size-m-touch)

    @media screen-desktop
        define-shape(desktop, control-size-m-desktop)

    text-align left @css{!important}

    &__arrows
        position absolute
        right 0
        top 0
        bottom 0
        border-radius 10px

    &__select
        opacity 0
        z-index 3
        position absolute
        top 0
        bottom 0
        left 0
        right 0
        width 100%
        height 100%
        background none

    .button__label
        padding-right 2.5ex
